<?xml version="1.0"?>

<config>
    <system>
        <tab id="bronto" translate="label" sortOrder="900">
            <label>Bronto</label>
        </tab>
        <section id="bronto_common" translate="label" sortOrder="130" showInDefault="1" showInWebsite="1" showInStore="1">
            <class>separator-top</class>
            <label>General Settings</label>
            <tab>bronto</tab>
            <resource>Bronto_Common::bronto_common</resource>
            <group id="settings" translate="label comment" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Settings</label>
                <comment>Settings in this section apply accross all Bronto Extension modules.</comment>
                <field id="active" translate="label comment" type="select" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Enable Extension</label>
                    <comment>Disabling this module will disable all Bronto Extension modules for this scope.</comment>
                    <source_model>Magento\Backend\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="token" translate="label" type="text" sortOrder="2" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>API Token</label>
                    <comment><![CDATA[<strong style="color:red;">Warning!</strong> Changing your API Token will require you to reconfigure all Bronto modules and reimport your data.]]></comment>
                    <depends>
                        <field id="active">1</field>
                    </depends>
                    <validate>required-entry validate-rangelength range-36-36</validate>
                    <!--<backend_model>Magento\Customer\Model\Config\Share</backend_model>-->
                    <!--<source_model>Magento\Customer\Model\Config\Share</source_model>-->
                </field>
                <field id="debug" translate="label comment" type="select" sortOrder="3" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Debug</label>
                    <comment><![CDATA[Allow the Bronto extension to write logs in <code>var/log.</code>]]></comment>
                    <source_model>Magento\Backend\Model\Config\Source\Enabledisable</source_model>
                    <depends>
                        <field id="active">1</field>
                    </depends>
                </field>
                <field id="verbose" translate="label comment" type="select" sortOrder="4" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Verbose Log Output</label>
                    <comment><![CDATA[If enabled, debug logs will also contain each API call.]]></comment>
                    <source_model>Magento\Backend\Model\Config\Source\Enabledisable</source_model>
                    <depends>
                        <field id="active">1</field>
                        <field id="debug">1</field>
                    </depends>
                </field>
                <field id="test" translate="label comment" type="select" sortOrder="5" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Test Mode</label>
                    <comment><![CDATA[Email sent with <a href="http://community.bronto.com/api/v4/objects/general/deliveryobject" target="_blank"><code>type=test</code></a> only to existing Contacts.]]></comment>
                    <source_model>Magento\Backend\Model\Config\Source\Enabledisable</source_model>
                    <depends>
                        <field id="active">1</field>
                    </depends>
                </field>
                <field id="notices" translate="label comment" type="select" sortOrder="6" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Error Notices</label>
                    <comment><![CDATA[Show warnings/errors as site notices.<br /><strong>Note:</strong> Site notices may be customer-facing.]]></comment>
                    <source_model>Magento\Backend\Model\Config\Source\Enabledisable</source_model>
                    <depends>
                        <field id="active">1</field>
                    </depends>
                </field>
            </group>
            <group id="registration" translate="label comment" type="text" sortOrder="11" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Settings</label>
                <comment>Settings in this section apply accross all Bronto Extension modules.</comment>
                <field id="site_name" translate="label comment" type="text" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Bronto Site Name</label>
                    <comment><![CDATA[Found within Bronto, located at: <br /><strong>Home &raquo; Settings &raquo General Settings</strong>]]></comment>
                </field>
                <field id="firstname" translate="label" type="text" sortOrder="2" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>First Name</label>
                </field>
                <field id="lastname" translate="label" type="text" sortOrder="3" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Last Name</label>
                </field>
                <field id="title" translate="label" type="text" sortOrder="2" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Title</label>
                </field>
            </group>
        </section>
    </system>
</config>